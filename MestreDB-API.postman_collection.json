{
  "info": {
    "name": "MestreDB API",
    "description": "Collection para testar a API do MestreDB",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "API Root",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api",
          "host": ["{{baseUrl}}"],
          "path": ["api"]
        }
      }
    },
    {
      "name": "Criar Usuário",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"João Silva\",\n  \"email\": \"joao@exemplo.com\",\n  \"password\": \"123456\",\n  \"is_superuser\": false\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/usuarios",
          "host": ["{{baseUrl}}"],
          "path": ["api", "usuarios"]
        }
      }
    },
    {
      "name": "Listar Usuários",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/usuarios?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "usuarios"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Buscar Usuário por ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/usuarios/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "usuarios", "1"]
        }
      }
    },
    {
      "name": "Atualizar Usuário",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"João Silva Atualizado\",\n  \"email\": \"joao.novo@exemplo.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/usuarios/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "usuarios", "1"]
        }
      }
    },
    {
      "name": "Deletar Usuário",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/usuarios/2",
          "host": ["{{baseUrl}}"],
          "path": ["api", "usuarios", "2"]
        }
      }
    }
  ]
}